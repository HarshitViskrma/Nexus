<style>
  .search-input{
    border: 1px solid #ccc;
    border-radius: 25px;
    padding: 0.2rem 2rem;
    font-size: 0.9rem;
  }
  .btn-search {
    background-color: #fe424d;
    color: white;
    border-radius: 25px;
    padding: 0 1rem 0 1rem;
    font-size: 0.9rem;
  }
  .btn-search:hover {
    background-color: #e03a44;
    color: white;
  }
  .btn-search i {
    display: inline;
    margin-right: 0.5rem;
  }

  @media (min-width:300px) and (max-width:768px) {
    .search-input {
      display: none;
    }
    .btn-search {
      display: none;
    }
    .btn-search i {
      display: none;
    }
  }

</style>

<nav class="navbar navbar-expand-md bg-body-light border-bottom sticky-top">
