<% layout("/layouts/boilerplate") %>
<style>
  .login-link {
    text-decoration: none;
    color: #222222;
    font-weight: 500;
  }
  .login-link:hover {
    text-decoration: underline;
    color: #fe434d;
  }
  @media (min-width: 300px) and (max-width: 768px) {
    .box {
      width: 90% !important;
      margin: auto !important;
      padding: 1rem !important;
    }
  }
</style>
<div class="row my-3">
  <div class="col-6 offset-3 box">
    <h1 class="f-info-name">Welcome to N E X U S!</h1>
    <p>Please create an account to continue.</p>
    <br />
    <form action="/signup" method="POST" class="needs-validation" novalidate>
      <div class="mb-3">
        <label for="username" class="form-label">Username</label>
        <input
          name="username"
          id="username"
          type="text"
          class="form-control"
          required
        />
        <div class="valid-feedback">Looks Good!</div>
      </div>
      <div class="mb-3">
        <label for="email" class="form-label">Email</label>
        <input
          name="email"
          id="email"
          type="email"
          class="form-control"
          required
        />
        <div class="valid-feedback">Looks Good!</div>
      </div>
      <div class="mb-3">
        <label for="password" class="form-label">Password</label>
        <input
          name="password"
          id="password"
          type="password"
          class="form-control"
          required
        />
        <div class="valid-feedback">Looks Good!</div>
      </div>
      <div class="mb-3">
        <button class="btn btn-dark">SignUp</button>
        <span class="mt-3 mx-4">
          Already have an account?
          <a href="/login" class="login-link">Login here</a>
        </span>
      </div>
    </form>
  </div>
</div>
